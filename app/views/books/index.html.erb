<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table border="1">
  <thead>
    <tr>
      <th>Book name</th>
      <th>Author</th>
      <th>Price</th>
      <th>Company</th>
      <th>Publish date</th>
      <th>image url</th>
      <th>image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_name %></td>
        <td><%= book.author %></td>
        <td>¥<%= book.price %></td>
        <td><%= book.company %></td>
        <td><%= book.publish_date %></td>
        <td><%= book.image_url %></td>
        <td><%= image_tag book.image_url, :size => '60x100' %></td>
        <!-- <td><img src="<%= book.image_url %>" alt="railsの本" width="60" height="100" /></td> -->
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

